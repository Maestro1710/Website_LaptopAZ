@model IEnumerable<ProTechTiveGear.Models.OrderEntity>

@{
	ViewBag.Title = "ListOrder";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h2 class="text-center">Đơn Hàng</h2>

    </div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Đơn Hàng</h2>

        <form action="@Url.Action("ExportSoldOrders", "Admin")" method="get" class="form-inline">
            <label for="month" class="mr-2">Tháng:</label>
            <input type="number" name="month" min="1" max="12" class="form-control mr-2" required />

            <label for="year" class="mr-2">Năm:</label>
            <input type="number" name="year" min="2000" max="2100" value="@DateTime.Now.Year" class="form-control mr-2" required />

            <button type="submit" class="btn btn-success">
                <i class="fa fa-file-excel-o"></i> Xuất Excel
            </button>
        </form>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Ngày Đặt Hàng
                        </th>
                        <th>
                            Ngày Giao Hàng
                        </th>
                        <th>
                            Tổng Giá
                        </th>
                        <th>
                            Trạng Thái
                        </th>

                        <th>
                            Khách Hàng
                        </th>
                        <th>
                            Địa Chỉ
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Số Điện Thoại
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Orderdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Deliverydate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Totalprice)
                            </td>

                            <td>
                                @if (item.Status == 1)
                                {
                                    <p>Đã giao</p>
                                }
                                else if (item.Status == 0)
                                {
                                    <p>Chờ xử lý</p>
                                }
                                else
                                {
                                    <p>Đang giao</p>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.EmailAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Phone)
                            </td>
                            <td>

                                @Html.ActionLink("Chi tiết", "OrderDetail", new { id = item.ID })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

